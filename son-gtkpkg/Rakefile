require 'rspec/core/rake_task'
require 'ci/reporter/rake/rspec'
require './main'

task :default => ['ci:all']

desc "Run Unit Tests"
RSpec::Core::RakeTask.new :specs do |task|
  task.pattern = Dir['spec/**/*_spec.rb']
end

# use like in
#   rake ci:all
namespace :ci do
  task :all => ['ci:setup:rspec', 'specs']
end
